@model DAL.ViewProductModel

<table style="width:100%">
    <tr>
        <th>ID</th>
        <th>Sản phẩm</th>
    </tr>

    @foreach (var item in Model._products)
    {
        <tr>
            <td>@item.Product_id</td>
            <td>@item.Product_name</td>
        </tr>
    }
</table>


<div class="container">
    <div class="row">
        <form action="/Product/Product/Add" method="POST">
            <div class="col-lg-12">
                <label class="">
                    Product name:
                    <input name="Product_name" type="text" class="form-control" value="Hmvomov">
                </label>
            </div>

            <div class="col-lg-12">
                <label class="">
                    Product content:
                    <textarea name="Product_content" class="form-control">1111</textarea>
                </label>
            </div>

            <div class="col-lg-12">
                <label class="">
                    Product Quantity:
                    <input name="Product_quantity" type="text" value="1" class="form-control">
                </label>
            </div>
            <div class="col-lg-12">
                <button class="btn btn-primary"><i class="glyphicon glyphicon-plus">&nbsp;</i>Thêm mới sản phẩm</button>
            </div>
        </form>
    </div>
</div>


<h2>Index</h2>

